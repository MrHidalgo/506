-
    var langArr = [
        "English",
        "Deutsch",
        "Français",
        "Italiano",
        "Español",
        "Portuguesa",
        "日本語"
    ];
    var currencyArr = [
        "$ USD",
        "€ EUR",
        "CA$ CAD",
        "£ GBP",
        "CHF CHF",
        "A$ AUD",
        "円 JPY",
        "R$ BRL",
        "$ MXN",
        "$ NZD"
    ];


.footer
    .footer__top
        .container.clearfix
            .footer_row.footer_row-curr-lang

                p(
                    class="footer-menu__title"
                )
                    span(
                        class="footer-menu__title-text"
                        data-id="Change Country & Currency"
                    )!= "Change Country & Currency"
                    i.footer-menu__title-icon

                .footer-menu__row.clearfix
                    .footer-menu__row_left
                        +selectWrap(langArr)
                    .footer-menu__row_right
                        +selectWrap(currencyArr)


            .footer_row
                include ./_macros/footer/footer-menu-0

            .footer_row
                include ./_macros/footer/footer-menu-1

            .footer_row

                include support

            .footer_row.footer_row-acc
                p(
                    class="support__title"
                    data-id="Support"
                )!= "Support"
                i.support__icon-arr


            .footer__tool-free
                include tollfree

    .footer__bottom
        .container.clearfix

            include copyright

            include currency

            include language