include _mixin/mixin
include _mixin/macrosMixin

doctype html
// if JavaScript disable in page add class "no-js"
html(
    lang="en"
    class="js"
)


    +headSite("506 PRODUCT", linkSite.styleLinkIndex, "")

    // open-menu open-popup cart_fill
    body(class="cart_fill")

        include _template/menu
        include _template/header
        include _template/category

        .body__row.body__row-category
            .container

                include _template/breadcrumbs

                .main__title-wrap.main__title-wrap--hide.clearfix
                    +mainTitle("main__title_left", "Cialis Super Active (Tadalafil)")



                include ./_template/flash


                .bottom-info.clearfix
                    .bottom-info_right
                        include ./_template/go-top
                    .bottom-info_centered
                        include ./_template/coupon
                    .bottom-info_left
                        include ./_template/certificate


        include ./_template/footer

        include ./_template/bottom-certificate

        include _template/modal__coupon
        include _template/slide-letter

        div(class="lang__btn", style="text-align:center; padding-top:50px; padding-bottom:15px; position:relative; z-index;100;")
            a(
            href="javascript:void(0);"
            data-lang="en"
            )!= "|| -- EN -- ||"
            a(
            href="javascript:void(0);"
            data-lang="de"
            )!= "-- DE -- ||"
            a(
            href="javascript:void(0);"
            data-lang="fr"
            )!= "-- FR -- ||"
            a(
            href="javascript:void(0);"
            data-lang="it"
            )!= "-- IT -- ||"
            a(
            href="javascript:void(0);"
            data-lang="pt"
            )!= "-- PT -- ||"
            a(
            href="javascript:void(0);"
            data-lang="es"
            )!= "-- ES -- ||"
            a(
            href="javascript:void(0);"
            data-lang="jp"
            )!= "-- JP -- ||"



    - for(var i = 0; i < linkSite.scriptLink.length; i++)
        script(src= linkSite.scriptLink[i])